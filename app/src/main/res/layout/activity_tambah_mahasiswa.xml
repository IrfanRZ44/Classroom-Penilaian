<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putihGelap1"
    >

    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue2">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/back"
            android:gravity="center_vertical"
            android:text="Tambah Mahasiswa"
            android:textColor="@color/putih"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/text_title_anggota"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customToolbar"
        android:background="@color/putihGelap1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/putihGelap1">

            <ImageView
                android:id="@+id/logoRegister"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_big"
                android:background="@drawable/logo" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoRegister"
                android:layout_marginTop="10dp"
                android:paddingBottom="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
                <EditText
                    android:id="@+id/mhs_nama"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height40"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_edit_text"
                    android:hint="Nama"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/hitam"
                    android:textColorHint="@color/grayMain" />

                <EditText
                    android:id="@+id/mhs_nim"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height40"
                    android:layout_below="@+id/mhs_nama"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_edit_text"
                    android:hint="NIM"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/hitam"
                    android:textColorHint="@color/grayMain"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/mhs_kontak"
                    android:layout_below="@+id/mhs_nim"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height40"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_edit_text"
                    android:hint="Kontak"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/hitam"
                    android:textColorHint="@color/grayMain" />
                <Button
                    android:id="@+id/tambah_mhs"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/mhs_kontak"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:background="@color/blue2"
                    android:text="TAMBAH"
                    android:textColor="@color/putih"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
