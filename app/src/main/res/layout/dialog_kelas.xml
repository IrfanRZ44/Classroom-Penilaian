<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customdialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:layout_margin="@dimen/margin_standard"
    android:background="@drawable/border_rl_putih"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_tambah"
            android:hint="Nama Kelas"
            android:textColorHint="@color/grayMain"
            android:textColor="@color/hitam"
            android:background="@drawable/border_edit_text"
            android:padding="@dimen/margin_standard"
            android:singleLine="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_desc"
            android:hint="Deskripsi Kelas"
            android:layout_below="@+id/et_tambah"
            android:textColorHint="@color/grayMain"
            android:textColor="@color/hitam"
            android:background="@drawable/border_edit_text"
            android:padding="@dimen/margin_standard"
            android:singleLine="true"
            android:layout_marginTop="@dimen/margin_standard"
            />
        <Button
            android:id="@+id/dialog_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:layout_below="@+id/et_desc"
            android:background="@drawable/border_btn_login"
            android:layout_marginTop="@dimen/margin_standard"
            />
        <Button
            android:id="@+id/dialog_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BATAL"
            android:layout_below="@+id/dialog_tambah"
            android:background="@drawable/border_btn_login"
            android:layout_marginTop="@dimen/margin_standard"
            />
    </RelativeLayout>

</ScrollView>